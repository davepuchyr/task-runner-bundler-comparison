{
   // Use IntelliSense to learn about possible Node.js debug attributes.
   // Hover to view descriptions of existing attributes.
   // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
   "version": "0.2.0",
   "configurations": [
      {
         "name": "Mocha", // http://www.albertgao.xyz/2016/12/16/how-to-debug-mocha-tests-in-visual-studio-code-with-es5-or-es6/
         "type": "node",
         "request": "launch",
         "stopOnEntry": false,
         "console": "integratedTerminal",
         "cwd": "${workspaceRoot}",
         "env": { // HARD-CODED
            "NODE_ENV": "developement",
            "NODE_PATH": "client;server", // HARD-CODED delimiter == ';' on windows, ':' elsewehere
            "DEBUG": "Base:*"
         },
         "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
         "args": [
            "${workspaceRoot}/server/**/*.test.js", // HARD-CODED
            "--require",
            "babel-register",
            "-u",
            "tdd",
            "--timeout",
            "999999",
            "--colors"
         ],
         "runtimeArgs": [
            "--nolazy",
            "--inspect-brk"
         ],
         "sourceMaps": true
      }
   ]
}